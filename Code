#include <stdio.h>
#include <stdlib.h>


int main() {

    double n1;
    double n2;
    char ope;
    printf("Enter n1: ");
    scanf("%lf",&n1);
    printf("Enter an operator: ");
    scanf("%s",&ope);
    printf("Enter n2: ");
    scanf("%lf",&n2);

    double result;
    if(ope == '+'){
        printf("%f",n1+n2);
    } else if(ope == '-'){
         printf("%f",n1-n2);
    } else if(ope == '/'){
         printf("%f",n1/n2);
    } else if(ope == '*'){
         printf("%f",n1*n2);
    } else{
        printf("Invalid operator");
    }



    return 0;
}
